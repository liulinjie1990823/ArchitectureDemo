<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--listview边界效果颜色,actionbar颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--switch,checkbox,edittext颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--无标题-->
    <style name="MyAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="MyAppTheme.NoActionBar.Transition">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSharedElementEnterTransition" >
            @transition/grid_detail_transition
        </item>
        <item name="android:windowSharedElementExitTransition" >
            @transition/grid_detail_transition
        </item>
    </style>

    <!--loading页面的主题,设置了默认的背景色-->
    <style name="MyAppTheme.NoActionBar.Loading">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/color_F7412D</item>
        <item name="android:windowAnimationStyle">@style/activity_loading</item>
    </style>

    <!--tab页面设置的主题-->
    <style name="MyAppTheme.NoActionBar.Tab">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/activity_tab</item>
    </style>


    <!--拖拽activity时可以看到底部的activity,就是拖拽的activity的背景半透明-->
    <style name="MyAppTheme.NoActionBar.Translucent">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyAppTheme.NoActionBar.slide">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/activity_anim_slide_left_and_right</item>
    </style>

    <style name="MyAppTheme.NoActionBar.fade">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/activity_anim_fade</item>
    </style>


    <!--进出界面使用左右动画-->
    <style name="activity_anim_slide_left_and_right" parent="@android:style/Animation.Activity">
        <!--打开当前界面,当前界面EnterAnimation,老界面ExitAnimation -->
        <item name="android:activityOpenEnterAnimation">@anim/pull_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/no_fade</item>
        <!-- 关闭当前界面,新界面EnterAnimation,当前界面ExitAnimation -->
        <item name="android:activityCloseEnterAnimation">@anim/no_fade</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
        <!--使用finish关闭界面需要设置下面两个,否则直接finish没有动画-->
        <!--<item name="android:windowEnterAnimation">@anim/fade_in</item>-->
        <!--<item name="android:windowExitAnimation">@anim/fade_out</item>-->
    </style>

    <!--进出界面使用左右动画-->
    <style name="activity_fade" parent="@android:style/Animation.Activity">
        <!--打开当前界面,当前界面EnterAnimation,老界面ExitAnimation -->
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/no_fade</item>
        <!-- 关闭当前界面,新界面EnterAnimation,当前界面ExitAnimation -->
        <item name="android:activityCloseEnterAnimation">@anim/no_fade</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
        <!--使用finish关闭界面需要设置下面两个,否则直接finish没有动画-->
<!--        <item name="android:windowEnterAnimation">@anim/fade_in</item>-->
<!--        <item name="android:windowExitAnimation">@anim/fade_out</item>-->
    </style>

    <style name="activity_loading" parent="@android:style/Animation.Activity">
        <!-- 关闭当前界面,新界面EnterAnimation,当前界面ExitAnimation -->
        <item name="android:activityCloseEnterAnimation">@anim/no_fade</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="activity_tab" parent="@android:style/Animation.Activity">
        <!-- 打开当前界面,当前界面EnterAnimation,老界面ExitAnimation -->
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/no_fade</item>
    </style>

</resources>
