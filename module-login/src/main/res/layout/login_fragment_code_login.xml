<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:background="@color/white">

    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/please_enter_phone_number"
        android:inputType="phone"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/color_878787"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/v_mobile_div"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_e7e7e7"
        app:layout_constraintTop_toBottomOf="@+id/et_mobile"/>

    <EditText
        android:id="@+id/et_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/please_enter_sms_verification_code"
        android:inputType="number"
        android:lines="1"
        android:maxLines="1"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/color_878787"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_mobile"
        app:layout_constraintRight_toLeftOf="@+id/tv_get_code"
        app:layout_constraintTop_toBottomOf="@+id/v_mobile_div"/>


    <TextView
        android:id="@+id/tv_get_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/login_get_verification_code"
        android:textColor="@color/color_878787"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_code"
        app:layout_constraintRight_toRightOf="@+id/et_mobile"
        app:layout_constraintTop_toTopOf="@+id/et_code"/>

    <View
        android:id="@+id/v_code_div"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_e7e7e7"
        app:layout_constraintTop_toBottomOf="@+id/et_code"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_login_bg"
        android:includeFontPadding="false"
        android:minHeight="0dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="@string/login_login"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/v_code_div"/>

</android.support.constraint.ConstraintLayout>