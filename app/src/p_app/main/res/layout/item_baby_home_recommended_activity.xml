<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="67:40"
        app:layout_constraintTop_toTopOf="parent"
        app:roundWithOverlayColor="@color/white"
        app:roundedCornerRadius="13dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/cl_333333"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/sv_image"
        tools:text="儿童摄影完美的将宝宝的天真烂漫表现出来，记录宝宝的每一个时刻儿童摄影完美的将宝宝的天真烂漫表现出来，记录宝宝的每一个时刻"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/cl_eeeeee"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

</android.support.constraint.ConstraintLayout>