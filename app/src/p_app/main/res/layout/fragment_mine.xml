<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_top_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shape_mine_top"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/parallax"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shape_mine_top"
        android:visibility="visible"/>

    <FrameLayout
        android:id="@+id/fl_toolbar_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/v_white_back"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            >

            <View
                android:id="@+id/v_status_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:visibility="visible"/>

            <!--黑色-->
            <android.support.constraint.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="iv_setting1,iv_message1,iv_qr_code1,iv_scanning1"/>

            <!--白色-->
            <android.support.constraint.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="iv_setting,rl_message,iv_qr_code,iv_scanning"/>

            <!--黑色-->
            <ImageView
                android:id="@+id/iv_setting1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_setting_selected"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/iv_message1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_message_selected"
                app:layout_constraintBottom_toBottomOf="@+id/iv_setting1"
                app:layout_constraintRight_toLeftOf="@+id/iv_setting1"
                app:layout_constraintTop_toTopOf="@+id/iv_setting1"
                />


            <ImageView
                android:id="@+id/iv_qr_code1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_qr_code_selected"
                app:layout_constraintBottom_toBottomOf="@+id/iv_setting1"
                app:layout_constraintRight_toLeftOf="@+id/iv_message1"
                app:layout_constraintTop_toTopOf="@+id/iv_setting1"
                />

            <ImageView
                android:id="@+id/iv_scanning1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_scanning_selected"
                app:layout_constraintBottom_toBottomOf="@+id/iv_setting1"
                app:layout_constraintRight_toLeftOf="@+id/iv_qr_code1"
                app:layout_constraintTop_toTopOf="@+id/iv_setting1"
                />

            <!--白色-->
            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_setting_selector"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/iv_setting1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_setting1"
                />

            <RelativeLayout
                android:id="@+id/rl_message"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/iv_setting1"
                app:layout_constraintRight_toLeftOf="@+id/iv_setting"
                app:layout_constraintTop_toTopOf="@+id/iv_setting1">

                <ImageView
                    android:id="@+id/iv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/ic_message_selector"
                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_qr_code_selector"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/iv_setting1"
                app:layout_constraintRight_toLeftOf="@+id/rl_message"
                app:layout_constraintTop_toTopOf="@+id/iv_setting1"
                />

            <ImageView
                android:id="@+id/iv_scanning"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_scanning_selector"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/iv_setting1"
                app:layout_constraintRight_toLeftOf="@+id/iv_qr_code"
                app:layout_constraintTop_toTopOf="@+id/iv_setting1"
                />


        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

    <com.llj.component.service.refreshLayout.JHSmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="35dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_toolbar_root">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cl_ffffff"
                android:orientation="vertical">

                <!--个人信息-->
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_mine_top">

                    <!--header-->
                    <RelativeLayout
                        android:id="@+id/rl_header_wrap"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/def_header_bg"
                        app:layout_constraintLeft_toLeftOf="parent">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/iv_header"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_centerInParent="true"
                            app:placeholderImage="@drawable/def_user_header"
                            app:placeholderImageScaleType="centerInside"/>

                    </RelativeLayout>

                    <!--login-->
                    <RelativeLayout
                        android:id="@+id/rl_login_wrap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        app:layout_constraintBottom_toTopOf="@+id/ll_member_tag"
                        app:layout_constraintLeft_toRightOf="@+id/rl_header_wrap"
                        app:layout_constraintRight_toLeftOf="@+id/tv_sign_in"
                        app:layout_constraintTop_toTopOf="@+id/rl_header_wrap"
                        app:layout_constraintVertical_chainStyle="packed"
                        >

                        <TextView
                            android:id="@+id/tv_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            tools:text="按时大大大大第三方爽肤水大第三方爽肤"/>


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_member_tag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/rl_header_wrap"
                        app:layout_constraintLeft_toLeftOf="@+id/rl_login_wrap"
                        app:layout_constraintRight_toLeftOf="@+id/tv_sign_in"
                        app:layout_constraintTop_toBottomOf="@+id/rl_login_wrap">
                        <!--会员-->
                        <TextView
                            android:id="@+id/iv_member_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:background="@drawable/shape_member_tag_bg"
                            android:includeFontPadding="false"
                            android:paddingLeft="4dp"
                            android:paddingTop="2dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="2dp"
                            android:text="VIP会员"
                            android:textColor="@color/white"
                            android:visibility="gone"
                            tools:visibility="visible"
                            />
                        <!--积分-->
                        <TextView
                            android:id="@+id/tv_diamond_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="9dp"
                            android:background="@drawable/shape_diamond_points_bg"
                            android:includeFontPadding="false"
                            android:paddingLeft="4dp"
                            android:paddingTop="2dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="2dp"
                            android:text="586 积分"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:visibility="gone"
                            tools:visibility="visible"/>

                    </LinearLayout>


                    <!--签到tag-->
                    <TextView
                        android:id="@+id/tv_sign_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/bg_sign_tag"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/cl_ff6363"
                        android:textSize="9dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/tv_sign_in"
                        app:layout_constraintLeft_toLeftOf="@+id/tv_sign_in"
                        tools:text="测试"
                        tools:visibility="visible"/>
                    <!--签到按钮-->
                    <Button
                        android:id="@+id/tv_sign_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/ic_to_sign_in_selector"
                        android:gravity="center"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="登录"
                        android:textColor="@color/col_mine_sign_in_selector"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@+id/rl_header_wrap"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/rl_header_wrap"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="82dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/rl_header_wrap"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="wqeqeq"
                            android:textSize="14dp"/>

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_mine_header_v_line"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="wqeqeq"
                            android:textSize="14dp"/>

                    </LinearLayout>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/ll_header_menu"
                        android:layout_width="match_parent"
                        android:layout_height="82dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:divider="@drawable/ic_mine_header_v_line"
                        app:dividerPadding="33dp"
                        app:layout_constraintTop_toBottomOf="@+id/rl_header_wrap"
                        app:showDividers="middle|beginning|end">

                    </android.support.v7.widget.LinearLayoutCompat>


                </android.support.constraint.ConstraintLayout>

                <!--按钮-->
                <LinearLayout
                    android:id="@+id/li_mine_top_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="25dp">

                </LinearLayout>
                <!--广告一-->
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_image1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginBottom="25dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_add1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_mine_shadow_divide"
                    android:visibility="visible"/>

                <!--我的婚博会和小工具-->
                <LinearLayout
                    android:id="@+id/ll_tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.llj.component.service.refreshLayout.JHSmartRefreshLayout>


</android.support.constraint.ConstraintLayout>