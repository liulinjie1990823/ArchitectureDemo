<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sv_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundAsCircle="true"
            app:roundWithOverlayColor="@color/white"
            tools:background="@color/cl_000000"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/cl_333333"
            android:textSize="14dp"
            android:maxLength="4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/sv_image"
            app:layout_constraintTop_toTopOf="@+id/sv_image"
            tools:text="演出展览演出展览演出展览演出展览演出展览演出展览演出展览"/>

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="0dp"
            android:maxLength="6"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/cl_333333"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="@+id/sv_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/sv_image"
            tools:text="副标题最多个演出展览演出展览演出展览演出展览演出展览"/>


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
