<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.llj.architecturedemo">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-sdk tools:overrideLibrary="com.llj.adapter,com.facebook.flipper" />

    <!--日历-->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <!--相机-->
    <uses-permission android:name="android.permission.CAMERA" />

    <!--通讯录-->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!--定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /><!-- 用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /><!-- 用于访问GPS定位 -->

    <!--麦克风-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!--电话-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.ADD_VOICEMAIL" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.ANSWER_PHONE_CALLS" />
    <uses-permission android:name="com.android.voicemail.permission.ADD_VOICEMAIL" />
    <uses-permission android:name="android.permission.USE_SIP" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />

    <!--传感器-->
    <uses-permission android:name="android.permission.BODY_SENSORS" />

    <!--短信-->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />

    <!--存储-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!--网络-->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 用于访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" /> <!-- 允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" /> <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->


    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> <!-- 用于开启 debug 版本的应用在6.0 系统上 层叠窗口权限 -->

    <!--蓝牙-->
    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- 允许程序连接到已配对的蓝牙设备 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- 允许程序发现和配对蓝牙设备 -->

    <application
        android:name=".AppApplication"
        android:allowBackup="false"
        android:appComponentFactory="whateverString"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme.NoActionBar"
        tools:replace="android:appComponentFactory">


        <activity
            android:name="com.llj.widget.ui.activity.ConstraintActivity"
            android:theme="@style/MyAppTheme.NoActionBar.common" />

        <activity android:name="com.llj.architecturedemo.ui.activity.ShareActivity" />
        <activity android:name="com.llj.widget.ui.activity.CircleViewActivity" />
        <activity android:name=".ui.activity.TouchEventActivity" />
        <activity android:name=".ui.activity.NestedScrollViewActivity" />
        <activity android:name=".ui.activity.RecycleViewActivity" />
        <activity android:name=".ui.activity.LinearLayoutActivity" />
        <activity android:name=".ui.activity.ComponentActivity" />
        <activity android:name=".ui.activity.ProxyActivity" />
        <activity android:name=".ui.activity.HookActivity" />
        <activity android:name=".ui.activity.StubActivity" />
        <activity android:name=".ui.activity.AptActivity" />
        <activity android:name=".ui.activity.AptActivity2" />
        <activity android:name=".ui.activity.RxJava2Activity" />
        <activity android:name=".ui.activity.RequestActivity" />
        <activity android:name=".ui.activity.SvgActivity" />

        <activity
            android:name="com.llj.loading.ui.activity.LoadingActivity"
            android:theme="@style/MyAppTheme.NoActionBar.Loading">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="ciw" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/MyAppTheme.NoActionBar.Tab" />
        <activity android:name=".ui.activity.MemoryLeakActivity" />

        <activity android:name="com.llj.loading.ui.activity.GuideActivity" />
        <activity android:name=".ui.activity.JavaTypeActivity" />
        <activity
            android:name=".ui.activity.SwipeBackLayoutActivity"
            android:theme="@style/MyAppTheme.NoActionBar.common" />
        <activity android:name=".ui.activity.RewardLayoutActivity" />
        <activity android:name=".ui.activity.EventActivity" />
        <activity android:name=".ui.activity.PermissionActivity" />
        <activity android:name=".ui.activity.GLSurfaceViewActivity" />
        <activity android:name=".ui.activity.RunnableActivity" />
        <activity
            android:name=".ui.activity.RecordVideoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.activity.KodoActivity" />
        <activity android:name=".ui.activity.RecordVideo2Activity" />

        <activity
            android:name=".ui.activity.FirstActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:taskAffinity="com.llj.task2" />
        <activity
            android:name=".ui.activity.SecondActivity"
            android:exported="true"
            android:taskAffinity="com.llj.task2" />


        <!--<activity android:name=".ui.activity.ThirdActivity"/>-->
        <!--<activity-->
        <!--android:name=".ui.activity.FourthActivity"-->
        <!--android:launchMode="singleTask"-->
        <!--android:taskAffinity="com.llj.architecturedemo2"/>-->
        <!--<activity android:name=".ui.activity.FifthActivity"/>-->

        <service android:name=".ui.service.LoadingService" />
    </application>

</manifest>