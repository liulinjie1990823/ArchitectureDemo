<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CommonToolbar">

        <!-- 左边文本框文字内容 -->
        <attr name="toolbar_li_contain_height" format="reference|dimension"/>
        <!-- 左边文本框文字内容 -->
        <attr name="toolbar_lefttext" format="reference|string"/>
        <!-- 左边文本框文字大小 -->
        <attr name="toolbar_lefttext_size" format="reference|dimension"/>
        <!-- 左边文本框文字颜色 -->
        <attr name="toolbar_lefttext_color" format="reference|color"/>
        <!-- 左边leftdrawable -->
        <attr name="toolbar_lefttext_drawable_left" format="reference|color"/>
        <!-- 左边文本框外层布局padding左边属性 -->
        <attr name="toolbar_lefttext_padding_left" format="reference|dimension"/>
        <!-- 左边文本框外层布局padding左边属性 -->
        <attr name="toolbar_lefttext_padding_right" format="reference|dimension"/>
        <!-- 左边文本框外层布局padding左边属性 -->
        <attr name="toolbar_lefttext_drawable_padding" format="reference|dimension"/>
        <!-- 左边文本框外层布局weight属性 -->
        <attr name="toolbar_lefttext_weight" format="float"/>
        <!-- 左边文本框的visibility属性 -->
        <attr name="toolbar_lefttext_visibility">

            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0"/>
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="4"/>
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="8"/>
        </attr>

        <!-- 中间文本框文字内容 -->
